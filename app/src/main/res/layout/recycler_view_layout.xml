<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        card_view:cardElevation="10dp"
        card_view:paddingEnd="10dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingTop="10dp"
        card_view:contentPaddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/survey_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:alpha="2"
                android:textSize="20dp"/>
            <TextView
                    android:id="@+id/survey_title_value_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                android:textColor="#ffffff"/>


            <TextView
                    android:id="@+id/class_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/class_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textColor="#ffffff"/>


            <TextView
                android:id="@+id/responses_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/responses_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textColor="#ffffff"/>



        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>